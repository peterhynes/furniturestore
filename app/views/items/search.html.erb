<div class="container">
  
  <h1 align="center">Items</h1>
  <br>
  
  <% if @items.length == 0 %>
  <h2>No items found</h2>
  <% end %>

  <div class="row">
    <% @items.each do |item| %>
      
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <h1><%= item.title %></h1>
        
        <%= link_to (image_tag item.image_url, :class=> "img-fluid img-thumbnail"), item %>
        <br>
        <br>
        
        <p><%= item.description %></p>
        <p>Price <%= number_to_currency(item.price, :unit => "â‚¬") %>
        <br>
        Category: <%= item.category %>
        <br>
        Brand: <%= item.brand %>
        </p>
        
        <p>
          <% if user_signed_in? %>
            <%= link_to 'Show', item, :class =>"btn btn-primary", :role=>"button" %>
          <% end %>
          
          <a href="/cart/<%= item.id %>" class="btn btn-primary">Add To Cart</a>
          
          <% if session[:login] == 1 %>
          <%= link_to 'Edit', edit_item_path(item), :class =>"btn btn-primary", :role=>"button" %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary", :role=>"button" %>
          
          <% end %>
        </p>
        
      </div>
        
      
    <% end %>
  </div>
    
    <br>


    <%= link_to 'New Item', new_item_path %>
  </div>